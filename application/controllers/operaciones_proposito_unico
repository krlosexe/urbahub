db.ventas.aggregate(
    [{
        $group:{
                    _id:{
                            mes:{ "$month":"$fecha"},
                            dia:{ "$dayOfMonth":"$fecha"},
                            a√±o:{ "$year":"$fecha"},
                    },
                    precioTotal:{ $sum:{ $multiply:["$precio","$cantidad"]}},
                    cantidadMedia: {$avg: "$cantidad"}
        }
    }]
)